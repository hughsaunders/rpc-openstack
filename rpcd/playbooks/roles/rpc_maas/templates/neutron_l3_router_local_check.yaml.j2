type: agent.plugin
label: neutron_l3_router_local_check--{{ ansible_hostname }}
disabled    : false
period      : "{{ maas_check_period }}"
timeout     : "{{ maas_check_timeout }}"
details     :
    file    : neutron_l3_router_local_check.py
    args    : []
alarms      :
    neutron_l3_router_status :
        label                   : "neutron_l3_router_status--{{ ansible_hostname }}"
        notification_plan_id    : "{{ maas_notification_plan }}"
        criteria                : |
            :set consecutiveCount={{ maas_alarm_local_consecutive_count }}
            if (metric["neutron_router_ping"] != 1) {
                return new AlarmStatus(CRITICAL, "neutron-l3-router down");
            }
